@model JuanMartin.PhotoGallery.Models.LoginViewModel;
@{
    ViewBag.Title = "User Registration";
}


<h2>Send activation link ...</h2>
<br />
@using (Html.BeginForm("ForgotPassword", "Login", FormMethod.Post))
{
    //this is for create form tag
    @Html.AntiForgeryToken() // this is for prevent CSRF attack
    @Html.ValidationSummary(true)

    if (@ViewBag.Message != null)
    {

        <div class="error-message">
            @ViewBag.Message
        </div>
    }
    <p>
        A password activation link will be semt through an email to the following address, please continue 
        this registration process there.
    </p>
    <table>
        <tr>
            <td>@Html.LabelFor(a => a.Email)</td>
            <td>@Html.TextBoxFor(a => a.Email)</td>
            <td>@Html.ValidationMessageFor(a => a.Email)</td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" value="Submit" />
            </td>
            <td></td>
        </tr>
    </table>
    <span style="font-size: 14px">back to <a asp-controller="Login" asp-action="Login">Login</a> ...</span>

} 